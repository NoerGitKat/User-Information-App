html
	head
		title Search User
		script(src="https://code.jquery.com/jquery-3.2.1.min.js")
		script.
			$(document).ready(function() {
				$('#searchbox').on('keyup', function() {
					var typed = $(this).val();
					if(typed.length == 0) {
						$('#autocomplete').empty();
					} else {
						$.post('/autocomplete', { input: typed }, function(results) {
							$('#autocomplete').empty();
							if(results.length !== 0) {
								for(var i = 0; i < results.length; i++) {
									var li = $('<li/>');
									li.html(results[i].firstname + " " + results[i].lastname + "<br />");
									$('#autocomplete').append(li);
								}
							
							}
						});
					};
				});
			});

	body
		h1 Search User
		form(method='POST', action='/search')
			p Search name: 
				input(list="userList" type='text', name='name' id='searchbox' autocomplete='off')
				datalist#userList
					option(id="user1")
					option(id="user1")
					option(id="user1")
			p
				input(type='submit', value='Search')
			br
			div#autocomplete